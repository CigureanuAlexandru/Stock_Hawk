<resources>

    <style name="AppTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="PercentChangeTextStyle">
        <item name="android:textSize">@dimen/percentage_tv_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BidPriceTextStyle">
        <item name="android:textSize">@dimen/bid_tv_size</item>
    </style>

    <style name="StockSymbolTextStyle">
        <item name="android:textSize">@dimen/stock_symbol_tv_size</item>
        <item name="android:textAllCaps">@bool/text_all_caps</item>
    </style>
</resources>
